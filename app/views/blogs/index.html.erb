<header>
	<h1>RnC News</h1>
</header>
<br />
<body>
	<% @blogs.each do |b| %>
		<% @player = Player.find(b.player_id) %>
		<p>
			<%= link_to(@player.name, player_path(@player)) %> |
			<%= "#{time_ago_in_words(b.created_at)} ago" %>
		</p>
		<p>
			<%= truncate(b.content, length: 100, separator: " ") %>
			<%= link_to("See full post", player_blog_path(@player, b)) %>
		</p>
	<% end %>
</body>
<br />
<%= render "layouts/footer" %>