<%= form_for(@user) do |f| %>
	<%= render "shared/errors" %>
	<p>
	<%= f.label :name %><br>
	<%= f.text_field :name, size: 20, autofocus: true %>
	</p>	
	<p>
	<%= f.label :username %><br>
	<%= f.text_field :username, size: 20 %>
	</p>	
	<p>
	<%= f.label :email %><br>
	<%= f.text_field :email, size: 30 %>
	</p>	
	<p>
	<%= f.label :number %><br>
	<%= f.number_field :number, size: 5 %>
	</p>
	<p>
	<%= f.label :password %><br>
	<%= f.password_field :password, size: 20 %>
	</p>	
	<p>
	<%= f.label :password_confirmation %><br>
	<%= f.password_field :password_confirmation, size: 20 %>
	</p>	
	<p>
	<% if current_user %>
		<%= f.submit "Update" %> |
	<% else %>
		<%= f.submit "Sign up" %> |
	<% end %>
		<%= link_to("Cancel", users_path) %> |
	  <%= link_to("Delete Account", @user, method: :delete, 
	  data: { confirm: 'Are you sure?' }) %>
	</p>
<% end %>