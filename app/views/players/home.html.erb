<body>
    <!-- Header -->
    <header id="top" class="header">
        <div class="text-vertical-center">
            <h1>Rush N Catch</h1>
        </div>
    </header>

    <section id="services">
        <div class="container">
          <hr class="primary">
            <div class="row">
                <div class="col-lg-6 col-md-6 text-center">
                    <%= link_to news_path do %>
                        <span class="fa fa-5x fa-newspaper-o" 
                        style="color: #000000"></span>
                    <% end %>
                    <h3>RnC News</h3>
                </div>
                <div class="col-lg-6 col-md-6 text-center">
                    <%= link_to players_path do %>
                        <span class="glyphicon glyphicon-user" 
                        style="font-size: 4.5em; color: #000000"></span>
                    <% end %>
                    <h3>Meet the players</h3>
                </div>
            </div>
          <hr class="primary">
        </div>
    </section>

    <%= render '/layouts/footer' %>

</body>