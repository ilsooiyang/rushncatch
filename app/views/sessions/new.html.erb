<%= form_tag(session_path) do %>
	<ol>
		<li>
			<%= label_tag :email_or_username, "Email or Username" %><br>
			<%= text_field_tag :email_or_username, nil, size: 30, autofocus: true %>
		</li>
		<li>
			<%= label_tag :password %><br>
			<%= password_field_tag :password, nil %>
		</li>
	</ol>
		<p>
		<%= submit_tag "Sign In" %>
		</p>
		<p>
			No account yet? <%= link_to 'Sign Up', signup_path %>				
		</p>
<% end %>